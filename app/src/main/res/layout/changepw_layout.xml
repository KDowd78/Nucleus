<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="*** Change Password ***"
            android:id="@+id/headline_text"
            android:textAlignment="center" />

        <Space
            android:layout_width="20px"
            android:layout_height="50dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/currentpw_textfield"
            android:hint="Current Password" />

        <Space
            android:layout_width="20px"
            android:layout_height="100dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/newpw_textfield"
            android:hint="New Password" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/verifypw_textfiled"
            android:hint="Verify Password" />

        <Space
            android:layout_width="20px"
            android:layout_height="50dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Password"
            android:id="@+id/submitpw_button"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:text="If you don&apos;t remember your password, Please file an &quot;#I forgot my password&quot; form."
            android:id="@+id/textView4"
            android:textAlignment="viewStart"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>